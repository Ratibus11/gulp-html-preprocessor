{
	"compilerOptions": {
		"target": "ES5",
		"module": "CommonJS",
		"outDir": "./build",
		"types": ["node"],

		"declaration": true,
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"downlevelIteration": true,

		"noImplicitAny": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noImplicitThis": true
	},
	"include": ["./src"]
}
